<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("amazon.png", size: "40x27", alt: "Amazon", class: "logog"), root_path %>
    <%= link_to "Amazon", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Products",   categories_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Profile", current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Active Orders", order_path %></li>
              <li><%= link_to "Cancelled Orders", cancelled_path %></li>
              <li><%= link_to "Completed Orders", completed_path %></li>
              <li><%= link_to "Cart", cart_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>